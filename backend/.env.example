# Runtime
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=https://zarpadomueble.com
API_URL=https://api.zarpadomueble.com
FORCE_HTTPS=false
TRUST_PROXY=1
DRY_RUN=false

# CORS (comma-separated)
ALLOWED_ORIGINS=https://zarpadomueble.com,https://www.zarpadomueble.com,http://localhost:3000,http://127.0.0.1:3000
NETLIFY_PREVIEW_HOST_PATTERN=^[a-z0-9-]+--zarpadomueble\\.netlify\\.app$

# Mercado Pago
MP_ACCESS_TOKEN=APP_USR_xxx
MP_WEBHOOK_SECRET=
NOTIFICATION_URL=https://api.zarpadomueble.com/api/mp/webhook
MP_RETRY_ATTEMPTS=3
MP_RETRY_DELAY_MS=900
MP_API_TIMEOUT_MS=10000
MP_OFFLINE_FALLBACK=false

# Forms provider (Formspree, fijo por cÃ³digo)
# Contacto -> https://formspree.io/f/xqedeven
